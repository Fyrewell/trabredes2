{% extends 'layout.html.twig' %}

{% set active = 'registro_presenca' %}

{% block content %}
    <h1>{{ 'Registros de presença'|trans }}</h1>
      <a href="{{url('registro_presenca_add')}}">
        <button type="button" class="btn btn-success">
          <span class="glyphicon glyphicon-plus"></span> Adicionar Novo
        </button>
      </a>
      <a href="{{url('registro_presenca_relatorio')}}">
        <button type="button" class="btn btn-primary">
          <span class="glyphicon glyphicon-download"></span> Relatório
        </button>
      </a>
    <div class="panel panel-default" style="margin-top:16px">
    
      <div class="panel-heading">Abaixo a lista de registros de presença cadastrados</div>
        <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Disciplina</th>
            <th>Aluno</th>
            <th>Data Entra</th>
            <th>Data Sai</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
        {% for reg in dados %}
          <tr>
            <th scope="row">{{reg.id_registro_presenca}}</th>
            <td>{{reg.disciplina_nome}}</td>
            <td>{{reg.aluno_nome}}</td>
            <td>{{reg.data_entra}}</td>
            <td>{{reg.data_sai}}</td>
            <td>
              <button class="glyphicon glyphicon-pencil" title="Editar" onclick="location.href='{{path('registro_presenca_add')}}/{{reg.id_registro_presenca}}'" style="cursor:pointer"></button>
              <button class="glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Excluir" 
                onclick="if (confirm('Tem certeza que deseja excluir?')) location.href='{{path('registro_presenca_remove')}}/{{reg.id_registro_presenca}}';" style="cursor:pointer">
              </button>
            </td>
          </tr>
        {% endfor %}
        </tbody>
        </table>
    </div>
{% endblock %}
